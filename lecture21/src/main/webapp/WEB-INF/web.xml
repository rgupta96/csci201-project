<web-app>


	<servlet>
    	<servlet-name>HelloServlet</servlet-name>
    	<servlet-class>lecture21.HelloServlet</servlet-class>
  	</servlet>
	<servlet-mapping>
    	<servlet-name>HelloServlet</servlet-name>
    	<url-pattern>/HelloServlet</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>SecondServlet</servlet-name>
    	<servlet-class>lecture21.SecondServlet</servlet-class>
  	</servlet>
	<servlet-mapping>
    	<servlet-name>SecondServlet</servlet-name>
    	<url-pattern>/SecondServlet</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
    	<servlet-name>QueryServlet</servlet-name>
